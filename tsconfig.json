{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "./comp/",
        "rootDir": "./src/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "src/tests",
        "comp",
		"docs"
    ]
}
